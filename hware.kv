#:import WipeTransition kivy.uix.screenmanager.WipeTransition



<Screen>:
    on_leave: app.previous_screen = self.name
    transition: WipeTransition()
    BoxLayout:
        orientation: 'vertical'

    MDIconButton:
        icon: "theme-light-dark"
        theme_icon_color: "Custom"
        icon_color: app.theme_cls.primary_color
        pos_hint: {"center_x": .9, "center_y": .95}
        on_release:
    

        
<HomeScreen>:
    

    name: 'home'
    
        
                    
    

    Image:
        source: 'bg.png'

    MDCard:
        id:home
        size_hint: .7, .1
        focus_behavior: False
        pos_hint: {"center_x": .5, "center_y": .1}
        elevation: 1
        md_bg_color: app.theme_cls.primary_color
        

    MDLabel:
    
        font_style:  'H1'
        font_size: 15
        pos_hint: {"center_x": .68, "center_y": .10}
        text: "minigames"
        allow_selection: True
    

    MDLabel:

        font_name:  'HussarBold-7mRE.otf'
        font_size: 45
        pos_hint: {"center_x": .6, "center_y": .80}
        text: "Hey"
        allow_selection: True
        padding: "4dp", "4dp"
        color: app.theme_cls.primary_color
        

    
    
    MDLabel:

        font_name:  'HussarBold-7mRE.otf'
        font_size: 45
        pos_hint: {"center_x": .6, "center_y": .70}
        text: "There."
        allow_selection: True
        padding: "4dp", "4dp"
        color: app.theme_cls.primary_color


    MDSwitch:
        active: True
        pos_hint: {'center_x': .68, 'center_y': .1}
        active: False
        track_color_active: "#c9f1fe"
        


    MDFillRoundFlatButton:

        font_style:  'Subtitle1'
        text: "Today's Workout"
        md_bg_color: app.theme_cls.primary_color
        pos_hint: {'center_x': .5,  'center_y': .35}
        on_press: 
            root.manager.transition.direction = "left"
            root.manager.current = 'workouts'
        elevation: 1
   
   












<WorkoutsScreen>:

    name: 'workouts'

    MDRectangleFlatButton:
        
        text: 'Back'
        pos_hint: {'center_x':0.5,'center_y':0.04}
        on_press:
            root.manager.transition.direction = "right"
            root.manager.current = 'home'
        
    
    MDCard:

        size_hint: .7, .25
        pos_hint: {'center_x':.5, 'center_y': .8}
        elevation: 2
       
        spacing: 0

        MDLabel:

            font_name:  'HussarBold-7mRE.otf'
            text: "No weights workout       "
            halign: "right"
            font_size: self.width/25
            

    MDCard:
        size_hint: .2, .1
                
        elevation: 2
        md_bg_color: "#777a9b"
        radius: [self.width/2, ]
        pos_hint: {'center_x':.30, 'center_y': .8}
        padding: (50, 50)
        spacing: 0
    
    MDIconButton:
        icon: "arrow-right"
        theme_icon_color: "Custom"
        icon_color: app.theme_cls.primary_color
        pos_hint: {'center_x':.70, 'center_y': .75}
        on_release: 
            root.manager.transition.direction = "left"
            root.manager.current = 'no_weights'

        
                        
    Image:
        source: 'H_projectImg/no_weights-removebg-preview.png'
        size_hint: (.3, .2)    
        pos_hint: {'center_x':.30, 'center_y': .77}
        elevation: 2
    MDCard:

        size_hint: .7, .25
        pos_hint: {'center_x':.5, 'center_y': .5}
        elevation: 2
       
        spacing: 0

        MDLabel:
            font_name:  'HussarBold-7mRE.otf'
            text: "Minimal weights workout       "
            halign: "right"
            font_size: self.width/25

    MDCard:
        size_hint: .2, .1
                
        elevation: 2
        md_bg_color: "#777a9b"
        radius: [self.width/2, ]
        pos_hint: {'center_x':.30, 'center_y': .5}
        padding: (50, 50)
        spacing: 0    
                        
    Image:
        source: 'H_projectImg/minimal_weights-removebg-preview.png'
        size_hint: (.25, .15)    
        pos_hint: {'center_x':.30, 'center_y': .48} 


    MDCard:

        size_hint: .7, .25
        pos_hint: {'center_x':.5, 'center_y': .2}
        elevation: 2
       
        spacing: 0

        MDLabel:
            font_name:  'HussarBold-7mRE.otf'
            text: "Minimal room workout       "
            halign: "right"
            font_size: self.width/25

    MDCard:
        size_hint: .2, .1
                
        elevation: 2
        md_bg_color: "#777a9b"
        radius: [self.width/2, ]
        pos_hint: {'center_x':.30, 'center_y': .2}
        padding: (50, 50)
        pacing: 0    
                        
    Image:
        source: 'H_projectImg/noun-room-52044-removebg-preview.png'
        size_hint: (.15, .10)    
        pos_hint: {'center_x':.30, 'center_y': .19}
















<TooltipMDIconButton@MDIconButton+MDTooltip>


<NoweightScreen>:

    name: 'no_weights'

    MDLabel:
        id: noweightslabeltext
        text: "Wrist circles"
        bold: True
        font_name: 'HussarBold-7mRE.otf'
        pos_hint:  {'center_x':.6, 'center_y': .95}
        font_size: self.width/25

    MDHeroFrom:
        size_hint: .8, .4
        pos_hint:  {'center_x':.5, 'center_y': .65}
        radius: 24
        height: root.height / 1.8
        md_bg_color: "#ffffff"
        elevation: 8
    
        
        AsyncImage:
            id: noweights
            source: 'Noweights/1428.gif'
            pos_hint: {'center_x':.5, 'center_y': .5}
            size_hint:( .9, .9)            
        

    MDIconButton:
        icon: "alert-circle-outline"
        on_release: app.show_Modal()
        pos_hint: {"center_x": .9, "center_y": .85}

    TooltipMDIconButton:
        tooltip_text: "Quit workout"
        icon: "window-close"
        theme_icon_color: "Custom"
        icon_color: app.theme_cls.primary_color
        pos_hint: {'center_x':0.5,'center_y':0.4}
        on_release:
            root.resetnoweights()
            app.reset()
            root.manager.transition.direction = "right"
            root.manager.current = 'workouts'
            

    MDIconButton:
        icon: "arrow-left"
        theme_icon_color: "Custom"
        icon_color: app.theme_cls.primary_color
        pos_hint: {'center_x':.10, 'center_y': .4}
        on_press: 
            app.back()
            root.backnoweights()

    MDIconButton:
        icon: "arrow-right"
        theme_icon_color: "Custom"
        icon_color: app.theme_cls.primary_color
        pos_hint: {'center_x':.9, 'center_y': .4}
        on_press: 
            app.next()
            root.nextnoweights()

    MDFloatLayout:
        padding: "10dp"
        MDProgressBar:
            id: progress
            value: 0
            orientation: "horizontal"
    


        
    

   
<RootWidget>:

    NoweightScreen
    WorkoutsScreen
    HomeScreen
    
    
    
    
    
    