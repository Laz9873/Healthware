#:import WipeTransition kivy.uix.screenmanager.WipeTransition


<Screen>:
    on_leave: app.previous_screen = self.name
    transition: WipeTransition()
    BoxLayout:
        orientation: 'vertical'
    
    

<HomeScreen>:
    

    name: 'home'

    Image:
        source: 'bg.jpg'

    MDCard:
        size_hint: .7, .1
        focus_behavior: False
        pos_hint: {"center_x": .5, "center_y": .1}
        elevation: 1

    MDLabel:
    
        font_style:  'H1'
        font_size: 15
        pos_hint: {"center_x": .68, "center_y": .10}
        text: "minigames"
        allow_selection: True
    

    MDLabel:
    
        font_name:  'HussarBold-7mRE.otf'
        font_size: 45
        pos_hint: {"center_x": .6, "center_y": .80}
        text: "Hey"
        allow_selection: True
        padding: "4dp", "4dp"
    
    MDLabel:
        font_name:  'HussarBold-7mRE.otf'
        font_size: 45
        pos_hint: {"center_x": .6, "center_y": .70}
        text: "There."
        allow_selection: True
        padding: "4dp", "4dp"


    MDSwitch:
        active: True
        pos_hint: {'center_x': .68, 'center_y': .1}
        track_color_active: "#777a9b"
        thumb_color_active: "#777a9b"


    MDFillRoundFlatButton:

        font_style:  'Subtitle1'
        text: "Today's Workout"
        md_bg_color: "#777a9b"
        pos_hint: {'center_x': .5,  'center_y': .35}
        on_press: 
            root.manager.transition.direction = "left"
            root.manager.current = 'workouts'
        elevation: 1
   

















<WorkoutsScreen>:

    name: 'workouts'

    MDRectangleFlatButton:
        
        text: 'Back'
        pos_hint: {'center_x':0.5,'center_y':0.04}
        on_press:
            root.manager.transition.direction = "right"
            root.manager.current = 'home'
        
    
    MDCard:

        size_hint: .7, .25
        pos_hint: {'center_x':.5, 'center_y': .8}
        elevation: 2
       
        spacing: 0

        MDLabel:

            font_name:  'HussarBold-7mRE.otf'
            text: "No weights workout       "
            halign: "right"
            font_size: self.width/25
            

    MDCard:
        size_hint: .2, .1
                
        elevation: 2
        md_bg_color: "#777a9b"
        radius: [self.width/2, ]
        pos_hint: {'center_x':.30, 'center_y': .8}
        padding: (50, 50)
        spacing: 0
    
    MDCard:
        size_hint: .07, .04   
                
        elevation: 2
        md_bg_color: "#777a9b"
        radius: [self.width/2, ]
        pos_hint: {'center_x':.70, 'center_y': .75}
        padding: (50, 50)
        spacing: 0

    Button:
        background_normal: 'H_projectImg/arrow_next.png'
        background_down: 'H_projectImg/arrow_next.png'
        size_hint: .2, .1
        pos_hint: {'center_x':.69, 'center_y': .75}
        on_press:
            root.manager.transition.direction = "left"
            root.manager.current = 'no_weights'

        
                        
    Image:
        source: 'H_projectImg/no_weights-removebg-preview.png'
        size_hint: (.3, .2)    
        pos_hint: {'center_x':.30, 'center_y': .77}
        elevation: 2








    MDCard:

        size_hint: .7, .25
        pos_hint: {'center_x':.5, 'center_y': .5}
        elevation: 2
       
        spacing: 0

        MDLabel:
            font_name:  'HussarBold-7mRE.otf'
            text: "Minimal weights workout       "
            halign: "right"
            font_size: self.width/25

    MDCard:
        size_hint: .2, .1
                
        elevation: 2
        md_bg_color: "#777a9b"
        radius: [self.width/2, ]
        pos_hint: {'center_x':.30, 'center_y': .5}
        padding: (50, 50)
        spacing: 0    
                        
    Image:
        source: 'H_projectImg/minimal_weights-removebg-preview.png'
        size_hint: (.25, .15)    
        pos_hint: {'center_x':.30, 'center_y': .48} 


    MDCard:

        size_hint: .7, .25
        pos_hint: {'center_x':.5, 'center_y': .2}
        elevation: 2
       
        spacing: 0

        MDLabel:
            font_name:  'HussarBold-7mRE.otf'
            text: "Minimal room workout       "
            halign: "right"
            font_size: self.width/25

    MDCard:
        size_hint: .2, .1
                
        elevation: 2
        md_bg_color: "#777a9b"
        radius: [self.width/2, ]
        pos_hint: {'center_x':.30, 'center_y': .2}
        padding: (50, 50)
        pacing: 0    
                        
    Image:
        source: 'H_projectImg/noun-room-52044-removebg-preview.png'
        size_hint: (.15, .10)    
        pos_hint: {'center_x':.30, 'center_y': .19}



<NoweightScreen>:

    name: 'no_weights'

    MDBackdrop:
        id: backdrop
        left_action_items: [['menu', lambda x: self.open()]]
        font_name:  'HussarBold-7mRE.otf'
        title: "No Weights"
        radius_left: "25dp"
        radius_right: "25dp"
        header_text: "Info:"

        MDBackdropBackLayer:
            AsyncImage:
                source: '1428.gif'
                pos_hint: {'center_x':.5, 'center_y': .5}
                size_hint:( .5, .5)
        



    MDRectangleFlatButton:
        
        text: 'Back'
        pos_hint: {'center_x':0.5,'center_y':0.04}
        on_press:
            root.manager.transition.direction = "right"
            root.manager.current = 'workouts'

    

   
<RootWidget>:

    HomeScreen
    WorkoutsScreen
    NoweightScreen
    
    
    
    
    
    


