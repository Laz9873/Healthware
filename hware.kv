#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<Screen>:
    on_leave: app.previous_screen = self.name
    BoxLayout:
        orientation: 'vertical'

<HomeScreen>:
    

    name: 'home'

    MDCard:
        size_hint: .7, .1
        focus_behavior: False
        pos_hint: {"center_x": .5, "center_y": .1}
        elevation: 1

    MDLabel:
    
        font_style:  'H1'
        font_size: 15
        pos_hint: {"center_x": .68, "center_y": .10}
        text: "minigames"
        allow_selection: True
    

    MDLabel:
    
        font_name:  'HussarBold-7mRE.otf'
        font_size: 45
        pos_hint: {"center_x": .6, "center_y": .80}
        text: "Hey"
        allow_selection: True
        padding: "4dp", "4dp"
    
    MDLabel:
        font_name:  'HussarBold-7mRE.otf'
        font_size: 45
        pos_hint: {"center_x": .6, "center_y": .70}
        text: "There."
        allow_selection: True
        padding: "4dp", "4dp"


    MDSwitch:
        active: True
        pos_hint: {'center_x': .68, 'center_y': .1}
        track_color_active: "#777a9b"
        thumb_color_active: "#777a9b"


    MDFillRoundFlatButton:

        font_style:  'Subtitle1'
        text: "Today's Workout"
        md_bg_color: "#777a9b"
        pos_hint: {'center_x': .5,  'center_y': .35}
        on_release: root.manager.current = 'workouts'
        elevation: 1

    

<WorkoutsScreen>:

    name: 'workouts'

    MDRectangleFlatButton:
        text: 'Back'
        pos_hint: {'center_x':0.5,'center_y':0.04}
        on_release: root.manager.current = 'home'
    
    MDCard:
        size_hint: (None, None)
        size: "250dp", "100dp" 
        pos_hint: {'center_x':.5, 'center_y': .8}
        elevation: 2
        padding: "0dp", "200dp"
        spacing: "106dp"

    MDCard:
        size_hint: (None, None)
        size: "250dp", "100dp" 
        pos_hint: {'center_x':.5, 'center_y': .5}
        elevation: 2
        padding: "0dp", "200dp"
        spacing: "106dp"

    MDCard:
        size_hint: (None, None)
        size: "250dp", "100dp" 
        pos_hint: {'center_x':.5, 'center_y': .2}
        elevation: 2
        padding: "0dp", "200dp"
        spacing: "106dp"
   
<RootWidget>:
    HomeScreen
    WorkoutsScreen


